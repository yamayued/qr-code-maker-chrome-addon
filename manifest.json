{
  "manifest_version": 3,
  "name": "QR for Current Page",
  "version": "1.0.0",
  "description": "Generate a QR code for the current tab URL.",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Show QR Code",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "storage"]
}
